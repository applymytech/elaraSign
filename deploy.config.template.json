{
	"_comment": "COPY THIS TO deploy.config.json AND FILL IN YOUR VALUES",

	"gcloud": {
		"configuration": "YOUR_GCLOUD_CONFIG_NAME",
		"account": "YOUR_EMAIL@example.com",
		"project": "YOUR_GCP_PROJECT_ID",
		"serviceAccount": "YOUR_SERVICE_ACCOUNT@YOUR_PROJECT.iam.gserviceaccount.com"
	},

	"service": {
		"name": "elara-sign",
		"region": "us-central1",
		"domain": "sign.yourdomain.com"
	},

	"identity": {
		"_comment": "Service identity for witness model - appears on signed documents",
		"organizationName": "Your Organization Name",
		"serviceEmail": "signing-service@yourdomain.com",
		"adminEmail": "your-personal@email.com"
	},

	"banned": {
		"_comment": "Patterns that will BLOCK deployment if found in gcloud config",
		"patterns": ["client-project-name", "client@email.com"]
	}
}
